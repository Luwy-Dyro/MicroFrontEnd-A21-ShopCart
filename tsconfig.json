/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "cart-state": [
        "projects/cart-state/src/public-api.ts"
      ],
      "ui-kit": [
        "projects/ui-kit/src/public-api.ts"
      ]
    },
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve"
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./projects/shell/tsconfig.app.json"
    },
    {
      "path": "./projects/shell/tsconfig.spec.json"
    },
    {
      "path": "./projects/mfe-header/tsconfig.app.json"
    },
    {
      "path": "./projects/mfe-header/tsconfig.spec.json"
    },
    {
      "path": "./projects/mfe-shop/tsconfig.app.json"
    },
    {
      "path": "./projects/mfe-shop/tsconfig.spec.json"
    },
    {
      "path": "./projects/cart-state/tsconfig.lib.json"
    },
    {
      "path": "./projects/cart-state/tsconfig.spec.json"
    },
    {
      "path": "./projects/ui-kit/tsconfig.lib.json"
    },
    {
      "path": "./projects/ui-kit/tsconfig.spec.json"
    }
  ]
}
